{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[html]": {
    "editor.formatOnSave":true,
    "editor.formatOnPaste": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "all",
    "editor.acceptSuggestionOnEnter": "off"
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBorder": "#ffe600",
    "activityBar.border": "#ffe600",
    "activityBarTop.activeBorder": "#ffe600",
    "activityBarTop.foreground": "#ffe600",
    "activityBar.activeFocusBorder": "#ffe600",
    "activityBarTop.inactiveForeground": "#ffe600",
    "activityBarTop.dropBorder": "#ffe600",
    "tab.activeBorderTop": "#ffe600",
    "tab.border": "#ffe600",
    "editorGroupHeader.border": "#ffe600",
    "scrollbarSlider.background": "#ffe60040",
    "scrollbarSlider.activeBackground": "#ffe600cc",
    "scrollbar.shadow": "#ffe6006e"
  },
  "editor.scrollbar.verticalScrollbarSize": 7,
  "editor.scrollbar.horizontalScrollbarSize": 7,
  
  "angular-schematics.schematicsDefaultOptions": {
    "angular-*": {
      "externalTemplate": true
    },
    "angular-component": {
      "ngOnInit": true
    }
  }
}

